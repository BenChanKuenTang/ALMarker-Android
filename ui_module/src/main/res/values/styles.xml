<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- dynamic font style -->
    <attr name="enable_dynamic_font" format="boolean"/>
    <attr name="text_size_large" format="dimension"/>
    <attr name="font_path" format="string"/>

    <declare-styleable name="BaseButton">
        <attr name="button_style" format="enum">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
        </attr>
        <attr name="enable_dynamic_font"/>
        <attr name="text_size_large"/>
        <attr name="font_path"/>
    </declare-styleable>

    <declare-styleable name="BaseTextView">
        <attr name="enable_dynamic_font"/>
        <attr name="text_size_large"/>
        <attr name="font_path"/>
    </declare-styleable>

    <declare-styleable name="BaseEditText">
        <attr name="enable_dynamic_font"/>
        <attr name="text_size_large"/>
        <attr name="font_path"/>
    </declare-styleable>
</resources>